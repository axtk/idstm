{
  "name": "idstm",
  "version": "0.1.11",
  "description": "React store for straightforward shared state management",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "cross-env npm run clean && npm run compile",
    "clean": "node -e \"require('fs').rmSync('dist', {force: true, recursive: true});\"",
    "compile": "tsc",
    "prepublishOnly": "npm run build",
    "preversion": "npm run build",
    "typecheck": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/axtk/idstm.git"
  },
  "keywords": [
    "store",
    "immutable",
    "react"
  ],
  "author": "axtk",
  "license": "ISC",
  "peerDependencies": {
    "react": ">=16.8"
  },
  "devDependencies": {
    "@types/react": "^18.0.26",
    "cross-env": "^7.0.3",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "evtm": "^4.2.0",
    "immer": "^9.0.16"
  }
}
